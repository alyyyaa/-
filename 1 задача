#include <iostream>
using namespace std;
int main()
{
  float a1 = 1;
  float a2 = 2;
  float a3;
  cout << "a1 = " << a1 << endl;
  cout << "a2 = " << a2 << endl;
  int n=5;
  for (int k = 3; k <= n; k++) {
    a3 = a1;
    a1 = ((a1 + 2 * a2) / 3);
    a2 = a3;
    cout << "a" << k << "= " << a1 << endl;
  }
}
